<!doctype html>
<html style="height: 100%;">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || 'My Drive' %></title>
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%236366f1' stroke-width='2'><path d='M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z'/><polyline points='13 2 13 9 20 9'/></svg>'>
    <link rel="stylesheet" href="/css/style.css">
  </head>

  <body>
    <main class="error-page">
      <div class="container error-container">
        <section class="error-card">
          <p class="eyebrow">Status <%= status || 500 %></p>
          <h1><%= message || 'Something went wrong' %></h1>
          <p>We hit a problem while handling your request.</p>

          <div class="error-details">
            <h3>Details</h3>
            <p><%= typeof details !== 'undefined' ? details : 'An unexpected error occurred. Please try again.' %></p>
          </div>

          <% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
            <div class="error-list">
              <h3>Validation</h3>
              <ul>
                <% errors.forEach(error => { %>
                  <li>
                    <strong><%= error.param || 'Field' %></strong>
                    <span><%= error.msg %></span>
                  </li>
                <% }); %>
              </ul>
            </div>
          <% } %>

          <div class="error-actions">
            <a href="/" class="btn btn-primary">Go Home</a>
            <a href="javascript:history.back()" class="btn btn-outline">Try Previous Page</a>
          </div>
        </section>
      </div>
    </main>
    <script src="/js/main.js"></script>
  </body>
</html>
