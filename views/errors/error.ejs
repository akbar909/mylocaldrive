<!doctype html>
<html style="height: 100%;">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title || 'My Drive' %></title>
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 24 24' fill='none' stroke='%236366f1' stroke-width='2'><path d='M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z'/><polyline points='13 2 13 9 20 9'/></svg>'>
    <link rel="stylesheet" href="/css/style.css">
  </head>

  <body>
    <main style="min-height: 85vh; display: flex; align-items: center;">
      <div class="container" style="width: 100%; max-width: 720px;">
        <section style="background: var(--white); border: 1px solid #e5e7eb; border-radius: 16px; box-shadow: var(--shadow); padding: 2rem;">
          <p class="eyebrow" style="color: var(--text-light); font-weight: 600;">Status <%= status || 500 %></p>
          <h1 style="margin: 0.25rem 0 0.5rem; color: var(--text-dark);"> <%= message || 'Something went wrong' %> </h1>
          <p style="color: var(--text-light); margin-bottom: 1rem;">We hit a problem while handling your request.</p>

          <div style="border: 1px solid #e5e7eb; border-radius: 12px; padding: 1rem; margin-bottom: 1rem; background: var(--bg-light);">
            <h3 style="margin-bottom: 0.5rem; color: var(--text-dark); font-size: 1rem;">Details</h3>
            <p style="color: var(--text-light);"><%= details || 'An unexpected error occurred. Please try again.' %></p>
          </div>

          <% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
            <div style="border: 1px solid #e5e7eb; border-radius: 12px; padding: 1rem; margin-bottom: 1rem;">
              <h3 style="margin-bottom: 0.5rem; color: var(--text-dark); font-size: 1rem;">Validation</h3>
              <ul style="list-style: none; padding-left: 0; display: grid; gap: 0.4rem;">
                <% errors.forEach(error => { %>
                  <li style="color: var(--text-light);">
                    <strong style="color: var(--primary-color);"><%= error.param || 'Field' %></strong>
                    <span style="margin-left: 0.35rem;"><%= error.msg %></span>
                  </li>
                <% }); %>
              </ul>
            </div>
          <% } %>

          <div class="error-actions" style="display: flex; gap: 0.75rem;">
            <a href="/" class="btn btn-primary">Go Home</a>
            <a href="javascript:history.back()" class="btn btn-outline">Try Previous Page</a>
          </div>
        </section>
      </div>
    </main>
    <script src="/js/main.js"></script>
  </body>
</html>
