<% layout('layouts/main') %>

<section class="error-section">
  <div class="container error-grid">
    <div class="error-visual">
      <div class="error-badge">
        <span class="error-code"><%= status || 500 %></span>
        <span class="dot"></span>
      </div>
      <h2>System hiccup detected</h2>
      <p>We hit a snag while handling your request. We track errors automatically to keep things stable.</p>
    </div>

    <div class="error-content">
      <p class="eyebrow">Error details</p>
      <h1><%= message || 'Something went wrong' %></h1>
      <p class="muted">If this keeps happening, try again in a moment or return to the dashboard.</p>

      <% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
        <div class="error-list">
          <h3>Validation</h3>
          <ul>
            <% errors.forEach(error => { %>
              <li>
                <strong><%= error.param || 'Field' %></strong>
                <span><%= error.msg %></span>
              </li>
            <% }); %>
          </ul>
        </div>
      <% } %>

      <% if (typeof details !== 'undefined' && details) { %>
        <div class="error-hint">
          <p><%= details %></p>
        </div>
      <% } %>

      <div class="error-actions">
        <a href="/" class="btn btn-primary">Go to Home</a>
        <a href="javascript:history.back()" class="btn btn-outline">Try Previous Page</a>
      </div>

      <div class="support-note">
        <span class="status-dot"></span>
        <div>
          <strong>Need help?</strong>
          <p>Contact support with the time and action that caused this issue.</p>
        </div>
      </div>
    </div>
  </div>
</section>
