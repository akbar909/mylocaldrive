<%layout('layouts/main') %>

<div class="auth-container">
    <div class="auth-card">
        <h2 class="auth-title">Forgot Password?</h2>
        <p class="auth-subtitle">Enter your email to receive an OTP</p>

        <form id="forgotPasswordForm" class="auth-form" action="/user/forgot-password" method="POST">
            <div class="form-group">
                <label for="email" class="form-label">Email Address</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    class="form-input <%= (typeof error !== 'undefined' && error) ? 'input-error' : '' %>"
                    placeholder="Enter your email"
                    required
                >
                <% if (typeof error !== 'undefined' && error) { %>
                    <span class="error-message"><%= error %></span>
                <% } %>
            </div>

            <button type="submit" class="btn-primary btn-full">
                Send OTP
            </button>
        </form>

        <div class="auth-footer">
            <p>Remember your password? <a href="/user/login" class="auth-link">Login here</a></p>
        </div>
    </div>
</div>
