<% layout('layouts/main') %>

<div class="auth-container">
    <div class="auth-card">
        <h2 class="auth-title">Create Account</h2>
        <p class="auth-subtitle">Sign up to get started with MyDrive</p>
        <% 
            const errorText = (typeof error !== 'undefined' && error) ? error : '';
            const errLower = errorText ? errorText.toLowerCase() : '';
            const usernameErr = errorText && errLower.includes('username') && (errLower.includes('exist') || errLower.includes('invalid') || errLower.includes('require'));
            const emailErr = errorText && errLower.includes('email') && (errLower.includes('exist') || errLower.includes('invalid') || errLower.includes('require'));
            const generalError = errorText && !usernameErr && !emailErr;
        %>
        <% if (generalError) { %>
            <div class="error-alert">
                <p><i class="fas fa-exclamation-triangle" aria-hidden="true"></i> <%= errorText %></p>
            </div>
        <% } %>

        <form id="registerForm" class="auth-form" action="/user/register" method="POST">
            <div class="form-group">
                <label for="username" class="form-label">Username</label>
                <input 
                    type="text" 
                    id="username" 
                    name="username" 
                    class="form-input <%= usernameErr ? 'input-error' : '' %>"
                    placeholder="Choose a username"
                    required
                >
                <span class="error-message" id="usernameError"><%= usernameErr ? errorText : '' %></span>
            </div>

            <div class="form-group" style="position: relative;">
                <label for="email" class="form-label">Email Address</label>
                <div style="position: relative; display: flex; align-items: center;">
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        class="form-input <%= emailErr ? 'input-error' : '' %>"
                        placeholder="name@company.com"
                        required
                        style="flex: 1; padding-right: 2.5rem;"
                    >
                    <span id="emailCheckIcon" style="position: absolute; right: 0.75rem; font-size: 1.2rem; display: none;"></span>
                </div>
                <span class="error-message" id="emailError"><%= emailErr ? errorText : '' %></span>
            </div>

            <div class="form-group">
                <label for="password" class="form-label">Password</label>
                <div style="position: relative; display: inline-block; width: 100%;">
                    <input 
                        type="password" 
                        id="password" 
                        name="password" 
                        class="form-input"
                        placeholder="Create a strong password"
                        required
                        style="width: 100%; padding-right: 2.5rem;"
                    >
                    <i class="fas fa-eye toggle-password" style="position: absolute; right: 14px; top: 50%; transform: translateY(-50%); cursor: pointer; color: #9ca3af; z-index: 10;"></i>
                </div>
                <span class="error-message" id="passwordError"></span>
            </div>

            <button type="submit" class="btn-primary btn-full">
                Register
            </button>
        </form>

        <div class="auth-footer">
            <p>Already have an account? <a href="/user/login" class="auth-link">Login here</a></p>
        </div>
    </div>
</div>

<script src="/js/validation.js"></script>
<script src="/js/register.js"></script>
<script>
// Password visibility toggle
document.querySelectorAll('.toggle-password').forEach(icon => {
    icon.addEventListener('click', function() {
        const input = this.previousElementSibling;
        if (input.type === 'password') {
            input.type = 'text';
            this.classList.remove('fa-eye');
            this.classList.add('fa-eye-slash');
        } else {
            input.type = 'password';
            this.classList.remove('fa-eye-slash');
            this.classList.add('fa-eye');
        }
    });
});
</script>