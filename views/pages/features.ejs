<% layout('layouts/main') %>

<section class="hero">
	<div class="container">
		<div class="hero-copy" style="max-width: 700px; margin: 0 auto; text-align: center;">
			<div class="pill">What we offer</div>
			<h1>Simple, secure account management.</h1>
			<p style="text-align: center;  margin: auto;">
				Currently offering secure user authentication. More features coming soon.
			</p>
		</div>
	</div>
</section>

<section class="feature-band" style="background: var(--bg-light);">
	<div class="container feature-grid">
		<div class="feature" style="border-left: 4px solid #6366f1;">
			<div class="icon-badge">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
					<circle cx="8.5" cy="7" r="4"></circle>
					<polyline points="17 11 19 13 23 9"></polyline>
				</svg>
			</div>
			<h3>Secure registration</h3>
			<p>Create your account with username and email. Strong password validation ensures your security.</p>
		</div>
		
		<div class="feature" style="border-left: 4px solid #8b5cf6;">
			<div class="icon-badge">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
				</svg>
			</div>
			<h3>Password encryption</h3>
			<p>Your passwords are hashed with bcrypt. We never store plain-text credentials.</p>
		</div>
		
		<div class="feature" style="border-left: 4px solid #06b6d4;">
			<div class="icon-badge">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
					<path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
				</svg>
			</div>
			<h3>JWT authentication</h3>
			<p>Token-based authentication keeps your session secure with HTTP-only cookies.</p>
		</div>
	</div>
</section>

<section style="padding: 3rem 0; background: var(--white);">
	<div class="container" style="text-align: center;">
		<h2 style="margin-bottom: 1rem;">Ready to get started?</h2>
		<p style="color: var(--text-light); margin-bottom: 2rem;">Create your account and start using our platform today.</p>
		<a href="/user/register" class="btn btn-primary">Create account</a>
	</div>
</section>
