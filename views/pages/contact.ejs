<% layout('layouts/main') %>

<section class="hero">
	<div class="container">
		<div class="hero-copy" style="max-width: 700px; margin: 0 auto; text-align: center;">
			<div class="pill">Get in touch</div>
			<h1>Let's talk</h1>
			<p style="text-align: center; margin: auto;">
				Have questions? We're here to help. Reach out via email.
			</p>
		</div>
	</div>
</section>

<section class="feature-band" style="background: var(--bg-light); padding: 4rem 0;">
	<div class="container" style="max-width: 900px; margin: 0 auto;">
		<div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; align-items: center;">
			<!-- Left side - Contact info -->
			<div>
				<h2 style="margin-bottom: 1.5rem; font-size: 2rem;">Get in touch</h2>
				<p style="color: var(--text-light); margin-bottom: 2rem; line-height: 1.6;">
					Whether you have a question about features, pricing, or anything else, 
					our team is ready to answer all your questions.
				</p>
				
				<div style="margin-bottom: 1.5rem;">
					<div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 0.5rem;">
						<div style="width: 40px; height: 40px; background: var(--primary-color); border-radius: 8px; display: flex; align-items: center; justify-content: center;">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
								<polyline points="22,6 12,13 2,6"></polyline>
							</svg>
						</div>
						<div>
							<h4 style="margin: 0; font-size: 0.875rem; color: var(--text-light);">General inquiries</h4>
							<a href="mailto:info@imeer.ai" style="color: var(--primary-color); text-decoration: none; font-weight: 500;">info@imeer.ai</a>
						</div>
					</div>
				</div>
				
				<div style="margin-bottom: 1.5rem;">
					<div style="display: flex; align-items: center; gap: 1rem;">
						<div style="width: 40px; height: 40px; background: #8b5cf6; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
								<circle cx="12" cy="12" r="10"></circle>
								<path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
								<line x1="12" y1="17" x2="12.01" y2="17"></line>
							</svg>
						</div>
						<div>
							<h4 style="margin: 0; font-size: 0.875rem; color: var(--text-light);">Customer support</h4>
							<a href="mailto:support@imeer.ai" style="color: var(--primary-color); text-decoration: none; font-weight: 500;">support@imeer.ai</a>
						</div>
					</div>
				</div>
			</div>
			
			<!-- Right side - CTA card -->
			<div style="background: var(--white); padding: 2.5rem; border-radius: 12px; box-shadow: var(--shadow); border-left: 4px solid var(--primary-color);">
				<h3 style="margin-bottom: 1rem;">Ready to get started?</h3>
				<p style="color: var(--text-light); margin-bottom: 1.5rem; line-height: 1.6;">
					Create your account and start using IMEER.ai today. Simple, secure, and ready when you are.
				</p>
				<a href="/user/register" class="btn btn-primary" style="width: 100%; text-align: center; display: inline-block;">Create account</a>
			</div>
		</div>
	</div>
</section>