<% layout('layouts/main') %>

<section class="hero">
	<div class="container">
		<div class="hero-copy" style="max-width: 700px; margin: 0 auto; text-align: center;">
			<div class="pill">Get in touch</div>
			<h1>We're here to help.</h1>
			<p>
				Questions about pricing, features, or your account? 
				Our team responds within hours, not days.
			</p>
		</div>
	</div>
</section>

<section class="feature-band">
	<div class="container feature-grid">
		<div class="feature">
			<div class="icon-badge">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
					<polyline points="22,6 12,13 2,6"></polyline>
				</svg>
			</div>
			<h3>Email us</h3>
			<p><a href="mailto:support@imeer.ai" style="color: var(--primary-color); text-decoration: none;">support@imeer.ai</a></p>
			<p><a href="mailto:info@imeer.ai" style="color: var(--primary-color); text-decoration: none;">info@imeer.ai</a></p>
			<p style="color: var(--text-light); font-size: 0.875rem;">Response within 4 hours</p>
		</div>
		
		<div class="feature">
			<div class="icon-badge">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
				</svg>
			</div>
			<h3>Live chat</h3>
			<p>Available 24/7</p>
			<p style="color: var(--text-light); font-size: 0.875rem;">Instant support</p>
		</div>
		
		<div class="feature">
			<div class="icon-badge">
				<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
					<circle cx="12" cy="12" r="10"></circle>
					<path d="M2 12h20"></path>
					<path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10"></path>
					<path d="M12 2a15.3 15.3 0 0 0-4 10 15.3 15.3 0 0 0 4 10"></path>
				</svg>
			</div>
			<h3>Social media</h3>
			<p>Follow us on</p>
			<p style="color: var(--text-light); font-size: 0.875rem;">Twitter, Facebook, LinkedIn</p>
		</div>
	</div>
</section>

<section style="padding: 3rem 0; background: var(--white);">
	<div class="container" style="text-align: center;">
		<h2 style="margin-bottom: 1rem;">Need immediate help?</h2>
		<p style="color: var(--text-light); margin-bottom: 2rem;">Check out our help center for instant answers to common questions.</p>
		<a href="/help" class="btn btn-primary">Visit help center</a>
	</div>
</section>
