<header class="header">
    <nav class="navbar">
        <div class="container">
            <div class="nav-brand">
                <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
                    <a href="/dashboard" class="logo">
                <% } else { %>
                    <a href="/" class="logo">
                <% } %>
                    <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path>
                        <polyline points="13 2 13 9 20 9"></polyline>
                    </svg>
                    <span>MyDrive</span>
                </a>
            </div>
            
            <button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="Toggle menu">
                <span></span>
                <span></span>
                <span></span>
            </button>

            <div class="nav-menu" id="navMenu">
                <ul class="nav-links">
                    <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
                        <li><a href="/dashboard" class="nav-link">Dashboard</a></li>
                        <li><a href="/files" class="nav-link">My Files</a></li>
                        <li><a href="/profile" class="nav-link">Profile</a></li>
                    <% } else { %>
                        <li><a href="/" class="nav-link">Home</a></li>
                        <li><a href="/about" class="nav-link">About</a></li>
                        <li><a href="/features" class="nav-link">Features</a></li>
                        <li><a href="/contact" class="nav-link">Contact</a></li>
                    <% } %>
                </ul>
                <div class="nav-actions">
                    <% if (typeof isLoggedIn !== 'undefined' && isLoggedIn) { %>
                        <a href="/user/logout" class="btn btn-outline" id="logoutLink">Logout</a>
                    <% } else if (typeof currentPage === 'undefined' || (currentPage !== 'login' && currentPage !== 'register' && currentPage !== 'verify-otp')) { %>
                        <a href="/user/login" class="btn btn-outline">Login</a>
                        <a href="/user/register" class="btn btn-primary">Sign Up</a>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>
</header>
